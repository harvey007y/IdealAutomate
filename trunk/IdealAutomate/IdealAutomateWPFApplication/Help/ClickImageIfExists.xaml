                        <TableRowGroup>
                            <TableRow>
                                <TableCell BorderBrush="Black" BorderThickness="1">
                                    <Paragraph>ClickImageIfExists</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="1">
                                    <Paragraph>imgFindButton</Paragraph>
                                </TableCell>
                                <TableCell BorderBrush="Black" BorderThickness="1">
